<ul class="list-unstyled">
  
<% tasks.each do |task| %>

  <li class="media mb-3">
      
    <div class="media-body">
        <div>
          
<%#= link_to task.user.name, user_path(task.user) %>
<div><%= link_to task.id, task %> :  <%= task.status %> &gt; <%= task.content %></div>
<span class="text-muted">posted at <%= task.created_at %></span>
        </div>

        
        <div>
<% if current_user == task.user %>
<%= link_to "Delete", task, method: :delete, 
data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
<% end %>
        </div>
    </div>
  </li>
  
<% end %>
<%= paginate tasks %>
</ul>
